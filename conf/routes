# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Money.index

# Routes for readin data
GET        /overview            controllers.Money.overview
GET        /income              controllers.Money.incomes
GET        /income/new          controllers.Money.createIncome
GET        /income/:id          controllers.Money.income(id: Long)

GET        /outcome             controllers.Money.outcomes
GET        /outcome/new         controllers.Money.createOutcome
GET        /outcome/:id         controllers.Money.outcome(id: Long)

GET        /balance             controllers.Money.balances
GET        /balance/new         controllers.Money.createBalance
GET        /balance/:id         controllers.Money.balance(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
