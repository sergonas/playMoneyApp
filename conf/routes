# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Money.index

# Routes for readin data
GET        /overview            controllers.Money.overview
GET        /income              controllers.Money.incomes
GET        /outcome             controllers.Money.outcomes
GET        /balance             controllers.Money.balances
GET        /outcome/:id         controllers.Money.outcome(id: Long)
GET        /income/:id          controllers.Money.income(id: Long)
GET        /balance/:id         controllers.Money.balance(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
